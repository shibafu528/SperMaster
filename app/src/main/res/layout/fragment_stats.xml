<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="info.shibafu528.spermaster.fragment.StatsFragment">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cardView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="@dimen/stats_data_card_margin"
        android:layout_marginTop="12dp"
        android:layout_marginRight="@dimen/stats_data_card_margin"
        android:elevation="4dp">
        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:stretchColumns="2"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:paddingLeft="20dp"
            android:paddingRight="23dp">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <info.shibafu528.spermaster.view.KoruriTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="平均記録"
                    android:textSize="@dimen/stats_data_text_size"
                    android:layout_column="0"
                    android:layout_marginTop="@dimen/stats_data_margin" />

                <info.shibafu528.spermaster.view.KoruriTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/stats_data_separator_padding"
                    android:paddingRight="@dimen/stats_data_separator_padding"
                    android:text=":"
                    android:textSize="@dimen/stats_data_text_size"
                    android:layout_column="1"
                    android:layout_marginTop="@dimen/stats_data_margin" />

                <info.shibafu528.spermaster.view.KoruriTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="d日 hh時間 mm分"
                    android:textSize="@dimen/stats_data_text_size"
                    android:id="@+id/average"
                    android:layout_column="2"
                    android:gravity="right"
                    android:layout_marginTop="@dimen/stats_data_margin" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <info.shibafu528.spermaster.view.KoruriTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="最長記録"
                    android:textSize="@dimen/stats_data_text_size"
                    android:layout_column="0"
                    android:layout_marginTop="@dimen/stats_data_margin" />

                <info.shibafu528.spermaster.view.KoruriTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/stats_data_separator_padding"
                    android:paddingRight="@dimen/stats_data_separator_padding"
                    android:text=":"
                    android:textSize="@dimen/stats_data_text_size"
                    android:layout_column="1"
                    android:layout_marginTop="@dimen/stats_data_margin" />

                <info.shibafu528.spermaster.view.KoruriTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="d日 hh時間 mm分"
                    android:textSize="@dimen/stats_data_text_size"
                    android:id="@+id/longest"
                    android:layout_column="2"
                    android:gravity="right"
                    android:layout_marginTop="@dimen/stats_data_margin" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <info.shibafu528.spermaster.view.KoruriTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="最短記録"
                    android:textSize="@dimen/stats_data_text_size"
                    android:layout_column="0"
                    android:layout_marginTop="@dimen/stats_data_margin" />

                <info.shibafu528.spermaster.view.KoruriTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/stats_data_separator_padding"
                    android:paddingRight="@dimen/stats_data_separator_padding"
                    android:text=":"
                    android:textSize="@dimen/stats_data_text_size"
                    android:layout_column="1"
                    android:layout_marginTop="@dimen/stats_data_margin" />

                <info.shibafu528.spermaster.view.KoruriTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="d日 hh時間 mm分"
                    android:textSize="@dimen/stats_data_text_size"
                    android:id="@+id/shortest"
                    android:layout_column="2"
                    android:gravity="right"
                    android:layout_marginTop="@dimen/stats_data_margin" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <info.shibafu528.spermaster.view.KoruriTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="合計時間"
                    android:textSize="@dimen/stats_data_text_size"
                    android:layout_column="0"
                    android:layout_marginTop="@dimen/stats_data_margin" />

                <info.shibafu528.spermaster.view.KoruriTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/stats_data_separator_padding"
                    android:paddingRight="@dimen/stats_data_separator_padding"
                    android:text=":"
                    android:textSize="@dimen/stats_data_text_size"
                    android:layout_column="1"
                    android:layout_marginTop="@dimen/stats_data_margin" />

                <info.shibafu528.spermaster.view.KoruriTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="d日 hh時間 mm分"
                    android:textSize="@dimen/stats_data_text_size"
                    android:id="@+id/totalTime"
                    android:layout_column="2"
                    android:gravity="right"
                    android:layout_marginTop="@dimen/stats_data_margin" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <info.shibafu528.spermaster.view.KoruriTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="回数"
                    android:textSize="@dimen/stats_data_text_size"
                    android:layout_column="0"
                    android:gravity="end"
                    android:layout_marginTop="@dimen/stats_data_margin"
                    android:layout_marginBottom="@dimen/stats_data_margin"/>

                <info.shibafu528.spermaster.view.KoruriTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/stats_data_separator_padding"
                    android:paddingRight="@dimen/stats_data_separator_padding"
                    android:text=":"
                    android:textSize="@dimen/stats_data_text_size"
                    android:layout_column="1"
                    android:layout_marginTop="@dimen/stats_data_margin"
                    android:layout_marginBottom="@dimen/stats_data_margin"/>

                <info.shibafu528.spermaster.view.KoruriTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="n回"
                    android:textSize="@dimen/stats_data_text_size"
                    android:id="@+id/totalCount"
                    android:layout_column="2"
                    android:gravity="right"
                    android:layout_marginTop="@dimen/stats_data_margin"
                    android:layout_marginBottom="@dimen/stats_data_margin"/>
            </TableRow>
        </TableLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cardView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="@dimen/stats_data_card_margin"
        android:layout_marginTop="8dp"
        android:layout_marginRight="@dimen/stats_data_card_margin"
        android:elevation="4dp"
        android:layout_below="@+id/cardView">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:paddingLeft="20dp"
                android:paddingRight="23dp"
                android:layout_marginTop="@dimen/stats_data_margin"
                android:layout_marginBottom="@dimen/stats_data_margin">

                <info.shibafu528.spermaster.view.KoruriTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="解除した実績"
                    android:textSize="@dimen/stats_data_text_size"
                    android:gravity="center_vertical" />

                <info.shibafu528.spermaster.view.KoruriTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="n個"
                    android:textSize="@dimen/stats_data_text_size"
                    android:id="@+id/achievementsCount"
                    android:layout_weight="1"
                    android:gravity="center_vertical|end" />
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:src="@color/colorPrimary" />

            <info.shibafu528.spermaster.view.KoruriButton
                style="?buttonBarButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="詳細"
                android:textSize="@dimen/stats_data_text_size"
                android:id="@+id/achievementsMore"
                android:gravity="center_vertical|end"
                android:layout_gravity="right"
                android:paddingLeft="20dp"
                android:paddingRight="24dp"/>

        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/shareFab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_share_white_24dp"
        app:borderWidth="0dp"
        app:fabSize="normal"
        android:layout_margin="@dimen/floating_action_button_fix"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>

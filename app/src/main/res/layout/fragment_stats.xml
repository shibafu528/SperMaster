<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="info.shibafu528.spermaster.fragment.StatsFragment">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/colorPrimaryDark"
        android:elevation="8dp"
        android:id="@+id/linearLayout"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingLeft="150dp"
        android:paddingTop="30dp">

        <info.shibafu528.spermaster.view.KoruriTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Newbie Spermer"
            android:id="@+id/achievement"
            android:textColor="#fff"
            android:fontFamily="sans-serif"
            android:textSize="20dp"
            android:textStyle="bold" />

        <info.shibafu528.spermaster.view.KoruriTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="\@user_name"
            android:id="@+id/userName"
            android:textColor="#fff"
            android:layout_marginTop="6dp"
            android:textSize="14dp" />
    </LinearLayout>

    <com.makeramen.roundedimageview.RoundedImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/icon"
        android:src="@color/colorPrimary"
        android:scaleType="fitCenter"
        app:riv_corner_radius="30dip"
        app:riv_border_width="2dp"
        app:riv_border_color="#fff"
        app:riv_mutate_background="true"
        app:riv_tile_mode="repeat"
        app:riv_oval="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="59dp"
        android:layout_marginTop="20dp"
        android:elevation="8dp" />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/cardView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/linearLayout"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/stats_data_card_margin"
        android:layout_marginTop="28dp"
        android:layout_marginRight="@dimen/stats_data_card_margin"
        android:layout_marginBottom="-8dp"
        android:elevation="4dp">
        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:stretchColumns="2"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:paddingLeft="20dp"
            android:paddingRight="23dp">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <info.shibafu528.spermaster.view.KoruriTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="平均記録"
                    android:textSize="@dimen/stats_data_text_size"
                    android:layout_column="0"
                    android:layout_marginTop="@dimen/stats_data_margin_top" />

                <info.shibafu528.spermaster.view.KoruriTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/stats_data_separator_padding"
                    android:paddingRight="@dimen/stats_data_separator_padding"
                    android:text=":"
                    android:textSize="@dimen/stats_data_text_size"
                    android:layout_column="1"
                    android:layout_marginTop="@dimen/stats_data_margin_top" />

                <info.shibafu528.spermaster.view.KoruriTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="d日 hh時間 mm分"
                    android:textSize="@dimen/stats_data_text_size"
                    android:id="@+id/average"
                    android:layout_column="2"
                    android:gravity="right"
                    android:layout_marginTop="@dimen/stats_data_margin_top" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <info.shibafu528.spermaster.view.KoruriTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="最長記録"
                    android:textSize="@dimen/stats_data_text_size"
                    android:layout_column="0"
                    android:layout_marginTop="@dimen/stats_data_margin_top" />

                <info.shibafu528.spermaster.view.KoruriTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/stats_data_separator_padding"
                    android:paddingRight="@dimen/stats_data_separator_padding"
                    android:text=":"
                    android:textSize="@dimen/stats_data_text_size"
                    android:layout_column="1"
                    android:layout_marginTop="@dimen/stats_data_margin_top" />

                <info.shibafu528.spermaster.view.KoruriTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="d日 hh時間 mm分"
                    android:textSize="@dimen/stats_data_text_size"
                    android:id="@+id/longest"
                    android:layout_column="2"
                    android:gravity="right"
                    android:layout_marginTop="@dimen/stats_data_margin_top" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <info.shibafu528.spermaster.view.KoruriTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="最短記録"
                    android:textSize="@dimen/stats_data_text_size"
                    android:layout_column="0"
                    android:layout_marginTop="@dimen/stats_data_margin_top" />

                <info.shibafu528.spermaster.view.KoruriTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/stats_data_separator_padding"
                    android:paddingRight="@dimen/stats_data_separator_padding"
                    android:text=":"
                    android:textSize="@dimen/stats_data_text_size"
                    android:layout_column="1"
                    android:layout_marginTop="@dimen/stats_data_margin_top" />

                <info.shibafu528.spermaster.view.KoruriTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="d日 hh時間 mm分"
                    android:textSize="@dimen/stats_data_text_size"
                    android:id="@+id/shortest"
                    android:layout_column="2"
                    android:gravity="right"
                    android:layout_marginTop="@dimen/stats_data_margin_top" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <info.shibafu528.spermaster.view.KoruriTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="合計時間"
                    android:textSize="@dimen/stats_data_text_size"
                    android:layout_column="0"
                    android:layout_marginTop="@dimen/stats_data_margin_top" />

                <info.shibafu528.spermaster.view.KoruriTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/stats_data_separator_padding"
                    android:paddingRight="@dimen/stats_data_separator_padding"
                    android:text=":"
                    android:textSize="@dimen/stats_data_text_size"
                    android:layout_column="1"
                    android:layout_marginTop="@dimen/stats_data_margin_top" />

                <info.shibafu528.spermaster.view.KoruriTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="d日 hh時間 mm分"
                    android:textSize="@dimen/stats_data_text_size"
                    android:id="@+id/totalTime"
                    android:layout_column="2"
                    android:gravity="right"
                    android:layout_marginTop="@dimen/stats_data_margin_top" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <info.shibafu528.spermaster.view.KoruriTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="回数"
                    android:textSize="@dimen/stats_data_text_size"
                    android:layout_column="0"
                    android:gravity="end"
                    android:layout_marginTop="@dimen/stats_data_margin_top" />

                <info.shibafu528.spermaster.view.KoruriTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/stats_data_separator_padding"
                    android:paddingRight="@dimen/stats_data_separator_padding"
                    android:text=":"
                    android:textSize="@dimen/stats_data_text_size"
                    android:layout_column="1"
                    android:layout_marginTop="@dimen/stats_data_margin_top" />

                <info.shibafu528.spermaster.view.KoruriTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="d日 hh時間 mm分"
                    android:textSize="@dimen/stats_data_text_size"
                    android:id="@+id/totalCount"
                    android:layout_column="2"
                    android:gravity="right"
                    android:layout_marginTop="@dimen/stats_data_margin_top" />
            </TableRow>
        </TableLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>
